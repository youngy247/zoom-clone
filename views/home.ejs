<!-- home.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <style>
        /* Add your CSS styles here */
        .container {
            text-align: center;
            margin-top: 200px;
        }

        .button {
            padding: 10px 20px;
            font-size: 18px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to the Video Chat App</h1>
        <p>Click the button below to start a video call</p>
        <p>Activity Status: <%= isActive ? 'Active' : 'Inactive' %></p>
        <p>Availability Status: <%= isAvailable ? 'Active' : 'Inactive' %></p>
        <button id="ring-button" class="button" onclick="ring()" <%= isAvailable ? '' : 'disabled' %>>Ring</button>
    </div>

    <script src="/socket.io/socket.io.js" defer></script>
    <script src="https://cdn.peerjs.com/1.3.2/peer.min.js" defer></script>
    <script src="../public/script.js" defer></script>
</body>
</html>
